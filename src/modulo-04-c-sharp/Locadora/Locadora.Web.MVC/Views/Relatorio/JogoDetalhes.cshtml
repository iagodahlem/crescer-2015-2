@model JogoDetalhesModel
@{
    ViewBag.Title = @Model.Nome;
}

<h2 class="view-title text-center">Detalhes do Jogo @Model.Nome</h2>

<table class="table table-striped table-bordered table-background">
    <tbody>
        <tr>
            <td width="340px" height="240px" rowspan="6" align="center">
                <img class="table-img" src="@Model.Imagem" alt="@Model.Descricao" />
            </td>
        </tr>
        <tr>
            <th align="right">Nome:</th>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <th>Descrição:</th>
            <td>@Model.Descricao</td>
        </tr>
        <tr>
            <th>Categoria:</th>
            <td>@Model.Categoria</td>
        </tr>
        <tr>
            <th>Preço:</th>
            <td>@Model.Preco.ToString("c")</td>
        </tr>
        <tr>
            <th>Selo:</th>
            <td>@Model.Selo</td>
        </tr>
        <tr>
            <td colspan="3" align="center">
                <iframe width="560" height="315" src="@Model.Video" frameborder="0" allowfullscreen></iframe>
            </td>
        </tr>
    </tbody>
</table>
