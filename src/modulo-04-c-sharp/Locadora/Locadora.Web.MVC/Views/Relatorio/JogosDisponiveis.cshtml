@model RelatorioModel
@{
    ViewBag.Title = "Relatorio de Jogos";
}

<h2 class="view-title text-center">Relatorio de Jogos</h2>

<nav class="navbar-btn">
    <ul class="nav">
        <li><button class="btn btn-default btn-primary" onclick="location.href='../Jogo/Manter'">Cadastrar jogo</button></li>
    </ul>
</nav>

@if (Model != null)
{
    <table class="table table-striped table-bordered table-background">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
                <th>Selo</th>
                <th colspan="2">Ações</th>
            </tr>
        <thead>
        <tfoot>
            <tr>
                <td>Quantidade de jogos: @Model.QuantidadeTotal</td>
                <td>Valor médio: @Model.ValorMedio.ToString("c")</td>
                <td>Jogo mais caro: @Model.JogoMaisCaro.ToString("c")</td>
                <td colspan="2">Jogo mais barato: @Model.JogoMaisBarato.ToString("c")</td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var jogo in @Model.ListaJogos)
            {
                <tr>
                    <td>@jogo.Nome</td>
                    <td>@jogo.Categoria</td>
                    <td>@jogo.Preco.ToString("c")</td>
                    <td>@jogo.Selo</td>
                    <td align="center">@Html.ActionLink("Detalhes", "JogoDetalhes", new { id = jogo.Id })</td>
                    <td align="center">@Html.ActionLink("Editar", "Manter", new { id = jogo.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">@ViewBag.Mensagem</p>
}
